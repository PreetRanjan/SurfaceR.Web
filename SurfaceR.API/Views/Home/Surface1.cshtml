
@{
    ViewData["Title"] = "Surface1";
}
<style>
    .background {
        position: absolute;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
        background-image: url('/wwwroot/images/11.jpg');
        background-size: cover;
        background-position: center;
        z-index: 1;
    }
    .glass-card {
        position: absolute;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
        background-image: url('/wwwroot/images/11.jpg');
        background-size: cover;
        background-position: center;
        filter: blur(5px) brightness(1.1);
        z-index: 2;
        animation: reveal ease .8s 1 forwards;
    }

    .box {
        box-shadow: 6px 7px 10px 3px #0f7bcc, inset 2px 2px 2px 1px #0f7bcc, inset -2px -2px 2px 1px #0f7bcc;
    }
</style>
<a asp-controller="Home" asp-action="Index" class="text-body"><h1>SurfaceR</h1></a>

