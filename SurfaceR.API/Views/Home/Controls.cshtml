
@{
    ViewData["Title"] = "Controls";
}
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="container bg-secondary p-5">
            <div class="container">
                <div class="intro">
                    <h2 class="text-center">Axes Remote</h2>
                    <p class="text-center">Using this remote you can control the Cube.</p>
                </div>
                <div class="buttons text-center">
                    <a class="btn btn-primary" target="_blank" role="button" asp-controller="Home" asp-action="Cube">See in action</a>
                    <a class="btn btn-light" target="_self" role="button" asp-controller="Home" asp-action="Index">Home</a>
                </div>
            </div>
            <div class="btn-group btn-group-horizontal mt-3">
                <button class="btn btn-light" id="x">0.00</button>
                <button class="btn btn-light" id="y">0.00</button>
                <button class="btn btn-light" id="z">0.00</button>
            </div>
            <div class="form-group">
                <label>X</label>
                <input id="sliderx" class="form-control axes" type="range" value="0" min="-180" step="0.002" max="180" />
                <label>Y</label>
                <input id="slidery" class="form-control axes" type="range" value="0" min="-180" step="0.002" max="180" />
                <label>Z</label>
                <input id="sliderz" class="form-control axes" type="range" value="0" min="-180" step="0.002" max="180" />

            </div>

        </div>
       
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts{
    <script src="~/lib/signalr/signalr.js"></script>
    <script src="~/js/chat.js"></script>
    <script>
        $(".axes").on('input', function () {
            $("#x").text($("#sliderx").val());
            $("#y").text($("#slidery").val());
            $("#z").text($("#sliderz").val());
        });
        
    </script>
}
